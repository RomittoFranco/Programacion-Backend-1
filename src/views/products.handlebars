<div class="products-container">
    <div class="filters">
        <select id="category-filter">
            <option value="">Todas las categorías</option>
            {{#each categories}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <select id="sort">
            <option value="">Ordenar por precio</option>
            <option value="asc">Menor a mayor</option>
            <option value="desc">Mayor a menor</option>
        </select>
    </div>

    <div class="products-grid">
        {{#each products}}
            <div class="product-card">
                <img src="{{thumbnails.[0]}}" alt="{{title}}">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
                <p class="price">${{price}}</p>
                <a href="/products/{{_id}}" class="details-button">Ver detalles</a>
                <button class="add-to-cart" data-id="{{_id}}">Agregar al carrito</button>
            </div>
        {{/each}}
    </div>

    <div class="pagination">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="page-link">Anterior</a>
        {{/if}}
        <span>Página {{page}} de {{totalPages}}</span>
        {{#if hasNextPage}}
            <a href="{{nextLink}}" class="page-link">Siguiente</a>
        {{/if}}
    </div>
</div>